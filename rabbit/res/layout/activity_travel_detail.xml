<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/include_title_bar" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="180dp" >

            <ImageView
                android:id="@+id/pic"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/model_travel" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/black60"
                android:orientation="vertical"
                android:paddingBottom="24dp"
                android:paddingLeft="10dp"
                android:paddingTop="8dp" >

                <TextView
                    android:id="@+id/title"
                    style="@style/text_white_medium"
                    android:text="喀纳斯旅游人间净土喀纳斯三日游" />
            </LinearLayout>
        </RelativeLayout>

        <WebView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_bg_color"
            android:padding="@dimen/padding_leftandright" >

            <TextView
                android:id="@+id/adddateline"
                style="@style/text_66_black_small"
                android:layout_alignParentRight="true"
                android:text="发布时间 2016-11-02" />

            <TextView
                android:id="@+id/views"
                style="@style/text_66_black_small"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/adddateline"
                android:text="阅读 221" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>