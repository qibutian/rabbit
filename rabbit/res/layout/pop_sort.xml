<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_leftandright" >
                    
                    <TextView
                    style="@style/text_44_black_medium"
                    android:layout_centerInParent="true"
                    android:text="@string/all_item_halal_food" />
                    
                    <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right" />
                    
                </RelativeLayout>
                
                <View style="@style/line_horizontal"/>
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_leftandright" >
                    
                    <TextView
                    style="@style/text_44_black_medium"
                    android:layout_centerInParent="true"
                    android:text="@string/all_item_travel_strategy" />
                    
                    <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right" />
                    
                </RelativeLayout>
                
                <View style="@style/line_horizontal"/>
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_leftandright" >
                    
                    <TextView
                    style="@style/text_44_black_medium"
                    android:layout_centerInParent="true"
                    android:text="@string/all_item_hotboom" />
                    
                    <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right" />
                </RelativeLayout>
                
                <View style="@style/line_horizontal"/>
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_leftandright" >
                    
                    <TextView
                    style="@style/text_44_black_medium"
                    android:layout_centerInParent="true"
                    android:text="@string/all_item_diving" />
                    
                    <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right" />
                    
                </RelativeLayout>
            </LinearLayout>
    

</LinearLayout>
