<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="220dp" >

                <com.means.rabbit.views.NomalGallery
                    android:id="@+id/gallery"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/black60"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp" >

                    <TextView
                        android:id="@+id/title"
                        style="@style/text_white_biger"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_leftandright" >

                <TextView
                    android:id="@+id/price"
                    style="@style/text_44_black_medium"
                    android:gravity="left"
                    android:textColor="@color/text_2B_green" />

                <TextView
                    android:id="@+id/old_price"
                    style="@style/text_66_black_small"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:id="@+id/count"
                    style="@style/text_66_black_small"
                    android:layout_width="0dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/bug"
                    style="@style/text_white_medium"
                    android:background="@drawable/btn_green_n"
                    android:paddingBottom="6dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="@string/gooddetail_buy"
                    android:paddingTop="6dp" />
            </LinearLayout>

            <View style="@style/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_leftandright" >

                <TextView
                    android:id="@+id/name"
                    style="@style/text_44_black_medium" />
            </LinearLayout>

            <View style="@style/line_horizontal" />

            <LinearLayout
                android:id="@+id/address_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_leftandright" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_grey_location" />

                <TextView
                    android:id="@+id/address"
                    style="@style/text_66_black_medium"
                    android:layout_marginLeft="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_right" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_leftandright" >

                <RatingBar
                    android:id="@+id/ratingbar"
                    style="@style/roomRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:stepSize="0.5" />

                <TextView
                    android:id="@+id/comment_des"
                    style="@style/text_66_black_medium"
                    android:layout_marginLeft="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_right" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/line_horizontal" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="@color/app_bg_color" />

            <View style="@style/line_horizontal" />

            <com.means.rabbit.views.KeyVauleView
                android:id="@+id/keyvule_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </com.means.rabbit.views.KeyVauleView>

            <View style="@style/line_horizontal" />

            <TextView
                style="@style/text_66_black_medium"
                android:layout_width="fill_parent"
                android:background="@color/app_bg_color"
                android:padding="@dimen/padding_leftandright"
                android:text="@string/gooddetail_buy_des" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingTop="14dp" >

                <TextView
                    android:id="@+id/goumaides"
                    style="@style/text_66_black_medium"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <View
                style="@style/line_horizontal"
                android:layout_marginTop="14dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dp"
                android:background="@color/app_bg_color" />

            <View style="@style/line_horizontal" />

            <com.means.rabbit.views.CommentView
                android:id="@+id/comment_view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/text_44_black_medium"
                android:layout_width="fill_parent"
                android:background="@color/app_bg_color"
                android:padding="@dimen/padding_leftandright"
                android:text="@string/tuangou_near" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>