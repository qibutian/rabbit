<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/black60"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/classify_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_leftandright"
            android:tag="" >

            <TextView
                style="@style/text_44_black_medium"
                android:layout_centerInParent="true"
                android:text="@string/my_order_pop_all" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right" />
        </RelativeLayout>

        <View style="@style/line_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_leftandright"
            android:tag="2" >

            <TextView
                style="@style/text_44_black_medium"
                android:layout_centerInParent="true"
                android:text="@string/my_order_pop_group" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right" />
        </RelativeLayout>

        <View style="@style/line_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_leftandright"
            android:tag="3" >

            <TextView
                style="@style/text_44_black_medium"
                android:layout_centerInParent="true"
                android:text="@string/my_order_pop_daigou" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right" />
        </RelativeLayout>

        <View style="@style/line_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_leftandright"
            android:tag="1" >

            <TextView
                style="@style/text_44_black_medium"
                android:layout_centerInParent="true"
                android:text="@string/my_order_pop_hotel" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right" />
        </RelativeLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/state_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_leftandright"
            android:tag="" >

            <TextView
                style="@style/text_44_black_medium"
                android:layout_centerInParent="true"
                android:text="@string/my_order_pop_all" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right" />
        </RelativeLayout>

        <View style="@style/line_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_leftandright"
            android:tag="1" >

            <TextView
                style="@style/text_44_black_medium"
                android:layout_centerInParent="true"
                android:text="@string/my_order_pop_await_pay" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right" />
        </RelativeLayout>

        <View style="@style/line_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_leftandright"
            android:tag="2" >

            <TextView
                style="@style/text_44_black_medium"
                android:layout_centerInParent="true"
                android:text="@string/my_order_pop_await_consumption" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right" />
        </RelativeLayout>

        <View style="@style/line_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_leftandright"
            android:tag="3" >

            <TextView
                style="@style/text_44_black_medium"
                android:layout_centerInParent="true"
                android:text="@string/my_order_pop_await_remark" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right" />
        </RelativeLayout>

        <View style="@style/line_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_leftandright"
            android:tag="4" >

            <TextView
                style="@style/text_44_black_medium"
                android:layout_centerInParent="true"
                android:text="@string/my_order_pop_finish" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right" />
        </RelativeLayout>
        <View style="@style/line_horizontal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_leftandright"
            android:tag="5" >

            <TextView
                style="@style/text_44_black_medium"
                android:layout_centerInParent="true"
                android:text="@string/my_order_pop_cancel" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_right" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>