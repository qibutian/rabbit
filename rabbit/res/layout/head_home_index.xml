<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res/com.means.rabbit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/pic"
        android:layout_width="fill_parent"
        android:layout_height="170dp"
        android:scaleType="centerCrop"
        android:src="@drawable/model_home" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="8dp" >

        <LinearLayout
            android:id="@+id/food_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <net.duohuo.dhroid.view.YToXImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_meishi"
                my:heightToWidth="1.0" />

            <TextView
                style="@style/text_66_black_small"
                android:layout_marginTop="4dp"
                android:text="美食" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.3" />

        <LinearLayout
            android:id="@+id/hotel_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <net.duohuo.dhroid.view.YToXImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_jiudian"
                my:heightToWidth="1.0" />

            <TextView
                style="@style/text_66_black_small"
                android:layout_marginTop="4dp"
                android:text="酒店" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.3" />

        <LinearLayout
            android:id="@+id/chongzhi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <net.duohuo.dhroid.view.YToXImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_huobi"
                my:heightToWidth="1.0" />

            <TextView
                style="@style/text_66_black_small"
                android:layout_marginTop="4dp"
                android:text="货币兑换" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.3" />

        <LinearLayout
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <net.duohuo.dhroid.view.YToXImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_chuxing"
                my:heightToWidth="1.0" />

            <TextView
                style="@style/text_66_black_small"
                android:layout_marginTop="4dp"
                android:text="出行服务" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.3" />

        <LinearLayout
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <net.duohuo.dhroid.view.YToXImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_lvxing"
                my:heightToWidth="1.0" />

            <TextView
                style="@style/text_66_black_small"
                android:layout_marginTop="4dp"
                android:text="旅行小秘" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="11dp" >

        <LinearLayout
            android:id="@+id/market"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <net.duohuo.dhroid.view.YToXImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_xiuxian"
                my:heightToWidth="1.0" />

            <TextView
                style="@style/text_66_black_small"
                android:layout_marginTop="4dp"
                android:text="休闲娱乐" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.3" />

        <LinearLayout
            android:id="@+id/night_life"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <net.duohuo.dhroid.view.YToXImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_zhuanxiang"
                my:heightToWidth="1.0" />

            <TextView
                style="@style/text_66_black_small"
                android:layout_marginTop="4dp"
                android:text="专享特色" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.3" />

        <LinearLayout
            android:id="@+id/redpacket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <net.duohuo.dhroid.view.YToXImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_suishenfanyi"
                my:heightToWidth="1.0" />

            <TextView
                style="@style/text_66_black_small"
                android:layout_marginTop="4dp"
                android:text="随身翻译" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.3" />

        <LinearLayout
            android:id="@+id/commission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <net.duohuo.dhroid.view.YToXImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_qiuzhu"
                my:heightToWidth="1.0" />

            <TextView
                style="@style/text_66_black_small"
                android:layout_marginTop="4dp"
                android:text="紧急求助" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.3" />

        <LinearLayout
            android:id="@+id/commission"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <net.duohuo.dhroid.view.YToXImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_quanbufenlei"
                my:heightToWidth="1.0" />

            <TextView
                style="@style/text_66_black_small"
                android:layout_marginTop="4dp"
                android:text="全部分类" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/line_horizontal"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_lantutoutiao" />

        <TextView
            style="@style/text_66_black_small"
            android:layout_marginLeft="5dp"
            android:text="迎圣诞,享好礼" />
    </LinearLayout>

    <View style="@style/line_horizontal" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="12dp"
        android:background="@color/app_bg_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/model_yuandan" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/model_shengdan" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/model_jingdian" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/model_xinnian" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/text_99_grey_small"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:background="@color/app_bg_color"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="猜你喜欢" />

</LinearLayout>