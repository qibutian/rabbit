<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/include_title_bar" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="180dp" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/model_guojia" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/black60"
                android:orientation="vertical"
                android:paddingBottom="24dp"
                android:paddingLeft="10dp"
                android:paddingTop="8dp" >

                <TextView
                    style="@style/text_white_medium"
                    android:text="菲律宾紧急求助" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="26dp" >

            <TextView
                style="@style/text_44_black_small"
                android:text="全国局限内警匪,失火急救: 117" />

            <TextView
                style="@style/text_44_black_small"
                android:layout_marginTop="2dp"
                android:text="固定电话干事查询 : 117" />

            <TextView
                style="@style/text_44_black_small"
                android:layout_marginTop="2dp"
                android:text="交通事宜: 116" />

            <TextView
                style="@style/text_44_black_small"
                android:layout_marginTop="2dp"
                android:text="自然灾害: 9501116" />

            <TextView
                style="@style/text_44_black_small"
                android:layout_marginTop="2dp"
                android:text="自然灾害: 9501116" />

            <TextView
                style="@style/text_44_black_small"
                android:layout_marginTop="2dp"
                android:text="自然灾害: 9501116" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_bg_color"
            android:padding="@dimen/padding_leftandright" >

            <TextView
                android:id="@+id/date"
                style="@style/text_66_black_small"
                android:layout_alignParentRight="true"
                android:text="发布时间 2016-11-02" />

            <TextView
                style="@style/text_66_black_small"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/date"
                android:text="阅读 221" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>