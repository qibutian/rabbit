<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp" >

        <ImageView
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:scaleType="fitXY"
            android:src="@drawable/model_meishi" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                style="@style/text_44_black_big"
                android:text="李姐重庆小面(万达店)" />
            

           <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp" >

                <TextView
                    style="@style/text_44_black_medium"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="￥18/人"
                    android:textColor="@color/text_2B_green" />

                <TextView
                    style="@style/text_66_black_small"
                    android:layout_marginRight="10dp"
                    android:text="评分 4.8/1298" />
                
                <TextView
                    style="@style/text_66_black_small"
                    android:layout_marginRight="15dp"
                    android:text="浦口区" />

                <TextView
                    style="@style/text_66_black_small"
                    android:text="3.1km" />
            </LinearLayout>
            
           <View 
               style="@style/line_horizontal"
               android:layout_marginTop="6dp"
               />
           
           <TextView
                    style="@style/text_66_black_small"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="价值990元的套餐只售99元" />
           
           <TextView
                    style="@style/text_66_black_small"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="在线付款满100减18" />

        </LinearLayout>
    </LinearLayout>

    <View style="@style/line_horizontal" />

</LinearLayout>