<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_face" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    style="@style/text_66_black_small"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="小明" />

                <RatingBar
                    android:id="@+id/ratingbar"
                    style="@style/roomRatingBarSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="1.5"
                    android:stepSize="0.5" />
            </LinearLayout>

            <TextView
                style="@style/text_44_black_medium"
                android:layout_marginTop="2dp"
                android:text="我真心强烈推荐这家,服务超一流" />

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="6dp"
                android:scaleType="centerCrop"
                android:src="@drawable/model_meishi" />

            <TextView
                style="@style/text_66_black_small"
                android:layout_marginTop="6dp"
                android:text="今天 08:30" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/line_horizontal" />

</LinearLayout>