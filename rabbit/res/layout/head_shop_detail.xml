<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="220dp" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/model_tuzhan" />

        <TextView
            android:id="@+id/count"
            style="@style/text_white_small"
            android:layout_margin="15dp"
            android:background="@drawable/num_bg"
            android:padding="2dp"
            android:text="1/30" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/black60"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingTop="4dp" >

            <TextView
                android:id="@+id/title"
                style="@style/text_white_biger"
                android:text="李姐小面重庆店(万达店)" />

            <TextView
                android:id="@+id/price"
                style="@style/text_white_big"
                android:layout_marginTop="2dp"
                android:text="￥18/人" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_leftandright" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_time" />

        <TextView
            android:id="@+id/time"
            style="@style/text_66_black_medium"
            android:layout_marginLeft="10dp"
            android:text="营业时间: " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_right" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_leftandright" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_grey_location" />

        <TextView
            android:id="@+id/address"
            style="@style/text_66_black_medium"
            android:layout_marginLeft="10dp"
            android:text="南京市秦淮区中山东路11号 " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_right" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/line_horizontal" />

    <LinearLayout
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_leftandright" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_tel" />

        <TextView
            android:id="@+id/tel"
            style="@style/text_66_black_medium"
            android:layout_marginLeft="10dp"
            android:text="025-12345678 " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_right" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_leftandright" >

        <RatingBar
            android:id="@+id/ratingbar"
            style="@style/roomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="1.5"
            android:stepSize="0.5" />

        <TextView
            android:id="@+id/comment_des"
            style="@style/text_66_black_medium"
            android:layout_marginLeft="10dp"
            android:text="2.7/113人" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_right" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/line_horizontal" />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="@color/app_bg_color" />

    <com.means.rabbit.views.KeyVauleView
        android:id="@+id/keyvule_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.means.rabbit.views.KeyVauleView>

    <com.means.rabbit.views.ShopDetailTuangouView
        android:id="@+id/tuangou_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <com.means.rabbit.views.CommentView
        android:id="@+id/comment_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>