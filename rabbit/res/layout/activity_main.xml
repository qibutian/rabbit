<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.means.shopping.activity.main.MainActivity" >


    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/line"
        android:layout_below="@+id/title_bar" >
    </FrameLayout>

    <View
        android:id="@+id/line"
        style="@style/line_horizontal"
        android:layout_above="@+id/tab" />

    <LinearLayout
        android:id="@+id/tab"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/img_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/icon_home_n" />
            </RelativeLayout>

            <TextView
                android:id="@+id/text"
                style="@style/text_66_black_small"
                android:layout_marginTop="2dp"
                android:text="@string/home_title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/icon_trip_n" />
            </RelativeLayout>

            <TextView
                style="@style/text_66_black_small"
                android:layout_marginTop="2dp"
                android:text="@string/travel" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/icon_store_n" />
            </RelativeLayout>

            <TextView
                style="@style/text_66_black_small"
                android:layout_marginTop="2dp"
                android:text="@string/search_type2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/icon_my_n" />
            </RelativeLayout>

            <TextView
                style="@style/text_66_black_small"
                android:layout_marginTop="2dp"
                android:text="@string/my_title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_more_n" />
            </RelativeLayout>

            <TextView
                style="@style/text_66_black_small"
                android:layout_marginTop="2dp"
                android:text="@string/more" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>